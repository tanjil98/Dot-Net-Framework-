<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website Title</title>
    <!-- Add your CSS and script references here -->
    <!-- For example, you can include Bootstrap CSS and JS files -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    @if (Session["UserId"] == null)
    {
        Response.Redirect("~/ZeroHunger/Login"); // Redirect to your logout URL
        return; // Optional: to stop executing the rest of the code after redirection
    }

    <style>
        .nav-item-spacing {
            margin-left: 10px;
            margin-right: 10px;
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">ZeroHunger</a>
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "ZeroHunger")</li>
                    <!-- Apply the custom class to add space between the list items -->
                    <li class="nav-item-spacing"></li>
                    <li>@Html.ActionLink("Parsel History", "parsel", "ZeroHunger")</li>
                    <li class="nav-item-spacing"></li>
                    <li>@Html.ActionLink("Logout", "Logout", "ZeroHunger")</li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container-fluid">
        @RenderSection("content", required: false)
        @RenderBody()
    </div>

    <!-- Bootstrap JS and other script references can be added here -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.11.6/dist/umd/popper.min.js"
            integrity="sha384-pzjw8Q+ua/cF9T5fAVNEa79k5PAQgAclOSZ7rOBAeMp6oFoV/Z93n5CAsUjFcDAus"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
</body>
</html>
